{
	"branches": ["main"],
	"plugins": [
		"@semantic-release/commit-analyzer",
		"@semantic-release/release-notes-generator",
		[
			"@semantic-release/changelog",
			{
				"changelogFile": "CHANGELOG.md"
			}
		],
		[
			"@semantic-release/npm",
			{
				"npmPublish": false
			}
		],
		[
			"@semantic-release/exec",
			{
				"prepareCmd": "jq --arg v ${nextRelease.version} '.version = $v' manifest.json > tmp.json && mv tmp.json manifest.json && npm run build"
			}
		],
		[
			"@semantic-release/git",
			{
				"assets": [
					"package.json",
					"package-lock.json",
					"CHANGELOG.md",
					"manifest.json"
				],
				"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
			}
		],
		[
			"@semantic-release/github",
			{
				"assets": [
					{
						"path": "main.js",
						"label": "main.js"
					},
					{
						"path": "styles.css",
						"label": "styles.css"
					},
					{
						"path": "manifest.json",
						"label": "manifest.json"
					}
				]
			}
		]
	]
}
