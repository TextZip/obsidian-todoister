{
	"branches": ["main"],
	"plugins": [
		"@semantic-release/commit-analyzer",
		"@semantic-release/release-notes-generator",
		[
			"@semantic-release/changelog",
			{
				"changelogFile": "CHANGELOG.md"
			}
		],
		[
			"@semantic-release/npm",
			{
				"npmPublish": false
			}
		],
		[
			"@semantic-release/exec",
			{
				"prepareCmd": "jq --arg v ${nextRelease.version} '.version = $v' manifest.json > tmp.json && mv tmp.json manifest.json && npm run build && zip -j obsidian-todoister-plugin.zip main.js manifest.json"
			}
		],
		[
			"@semantic-release/git",
			{
				"assets": [
					"package.json",
					"package-lock.json",
					"CHANGELOG.md",
					"manifest.json"
				],
				"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
			}
		],
		[
			"@semantic-release/github",
			{
				"assets": [
					{
						"path": "obsidian-todoister-plugin.zip",
						"label": "obsidian-todoister-plugin.zip"
					}
				]
			}
		]
	]
}
